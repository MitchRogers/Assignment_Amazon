@model Book

<!-- created a partial view page for book details -->
<div class="indBook bookborder rounded-right rounded-lg">
    <h2>@Model.Title</h2>
    <h3>@(Model.AuthorFirst + " " + Model.AuthorLast)</h3>
    <h5>@("Genre: " + Model.Category1 + ", " + Model.Category2)</h5>
    <h5>@(Model.Publisher + " --- " + Model.Isbn)</h5>
    <h5 class="text-primary">$@Model.Price</h5>
    <h5>Pages: <span class="badge badge-pill badge-primary">@Model.NumPages</span></h5>

    <form id="@Model.BookId" asp-page="/AddToCart" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float: right">
                Add To Cart
            </button>
        </span>
    </form>
</div>
